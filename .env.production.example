# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# ======================
# DATABASE
# ======================
POSTGRES_USER=sira_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=sira_production
DATABASE_URL=postgresql+psycopg2://sira_prod:CHANGE_ME_STRONG_PASSWORD@db:5432/sira_production

# ======================
# CLERK AUTHENTICATION
# ======================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_live_YOUR_SECRET_KEY
CLERK_JWKS_URL=https://YOUR_INSTANCE.clerk.accounts.dev/.well-known/jwks.json

# ======================
# API CONFIGURATION
# ======================
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
API_RATE_LIMIT_PER_MINUTE=120
API_RATE_LIMIT_PER_HOUR=2000

# ======================
# AI PROVIDERS
# ======================
MISTRAL_API_KEY=your_production_mistral_api_key
MISTRAL_EMBEDDING_MODEL=mistral-embed
MISTRAL_LLM_MODEL=mistral-large-latest

# ======================
# PINECONE VECTOR DATABASE
# ======================
PINECONE_API_KEY=your_production_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=sira-academic-programs-prod

# ======================
# RAG CONFIGURATION
# ======================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ======================
# SECURITY
# ======================
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_MIN_32_CHARS
HSTS_MAX_AGE=31536000
ENABLE_CSRF_PROTECTION=true

# ======================
# LOGGING & MONITORING
# ======================
LOG_LEVEL=INFO
SENTRY_DSN=
ENABLE_METRICS=true

# ======================
# ENVIRONMENT
# ======================
ENVIRONMENT=production
DEBUG=false

# ======================
# EMAIL (Optional - for notifications)
# ======================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ======================
# REDIS (Optional - for caching)
# ======================
REDIS_URL=redis://redis:6379/0
ENABLE_REDIS_CACHE=false
