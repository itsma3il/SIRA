# Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# ======================
# DATABASE
# ======================
POSTGRES_USER=sira_staging
POSTGRES_PASSWORD=CHANGE_ME_STAGING_PASSWORD
POSTGRES_DB=sira_staging
DATABASE_URL=postgresql+psycopg2://sira_staging:CHANGE_ME_STAGING_PASSWORD@db:5432/sira_staging

# ======================
# CLERK AUTHENTICATION
# ======================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY
CLERK_JWKS_URL=https://YOUR_INSTANCE.clerk.accounts.dev/.well-known/jwks.json

# ======================
# API CONFIGURATION
# ======================
NEXT_PUBLIC_API_BASE_URL=https://staging-api.yourdomain.com
CORS_ORIGINS=https://staging.yourdomain.com
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# ======================
# AI PROVIDERS
# ======================
MISTRAL_API_KEY=your_staging_mistral_api_key
MISTRAL_EMBEDDING_MODEL=mistral-embed
MISTRAL_LLM_MODEL=mistral-large-latest

# ======================
# PINECONE VECTOR DATABASE
# ======================
PINECONE_API_KEY=your_staging_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=sira-academic-programs-staging

# ======================
# RAG CONFIGURATION
# ======================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ======================
# SECURITY
# ======================
SECRET_KEY=CHANGE_ME_STAGING_SECRET_KEY
HSTS_MAX_AGE=31536000
ENABLE_CSRF_PROTECTION=true

# ======================
# LOGGING & MONITORING
# ======================
LOG_LEVEL=DEBUG
SENTRY_DSN=
ENABLE_METRICS=true

# ======================
# ENVIRONMENT
# ======================
ENVIRONMENT=staging
DEBUG=true

# ======================
# EMAIL (Optional)
# ======================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=staging@yourdomain.com

# ======================
# REDIS (Optional)
# ======================
REDIS_URL=redis://redis:6379/0
ENABLE_REDIS_CACHE=false
